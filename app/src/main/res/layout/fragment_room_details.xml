<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:textDirection="ltr"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/roomDetailsNumTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:text="Room Number"
            android:textSize="18sp" />

        <View
            android:layout_width="250dp"
            android:layout_height="0.5dp"
            android:layout_gravity="center"

            android:layout_margin="2dp"
            android:background="@color/colorAccent" />

        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/roomDetailsDescTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:text="Project Description that's an example of project donation details " />

        <View
            android:layout_width="250dp"
            android:layout_height="0.5dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:background="@color/colorAccent" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/roomDetailsPriceTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:padding="8dp"
                android:text="200 L.E per night"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/roomBookBTN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/colorAccent"
                android:textAllCaps="false"
                android:gravity="center"
                android:text="Book Now"

                android:textColor="@color/white" />
        </LinearLayout>


        <View
            android:layout_width="250dp"
            android:layout_height="0.5dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:background="@color/colorAccent" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/roomImagesRV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp" />


    </LinearLayout>
</ScrollView>